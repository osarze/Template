extends layouts/master

include mixins/feature-box
include mixins/portfolio

block content
    section(id="map" class="section-padding")

    section(id="contact-section" class="section-padding")
        div(class="container")
            div(class="row")
                div(class="col-lg-12 col-md-12")
                    h3(class="text-center") Send Us a Message
                        strong Message
                    p  You can visit our Office or Send us Message below

        div(class="container")
            div(class="row")
                div(class="col-md-6")
                    div(class="contact-info-box")
                        h2 contact Info
                        div(class="contact-info")
                            p
                                i(class="fa fa-map")
                                |  ADDRESS: Purbasha MGM,<br> London, E2 8DY.
                        
                        div(class="contact-info")
                            p
                                i(class="fa fa-envelope")
                                |  EMAIL: info@yoursite.com
                            
                        div(class="contact-info")
                            i(class="fa fa-phone")
                            p PHONE: +1 800-444-555
                        div(class="contact-info")
                            i(class="fa fa-globe")
                            p WEBSITE: www.yourdomain.com
                            
                        h5 Follow Us
                        ul(class="social-icons")
                            li
                                a(class="facebook" href="#")
                                i(class="fa fa-facebook")
                            li
                                a(class="twitter" href="#")
                                i(class="fa fa-twitter")
                            li
                                a(class="google" href="#")
                                i(class="google-twitter")


                div(class="col-md-5")
                    form
                        div(class="form-group")
                            label(for="name" class="sr-only") Name
                            input(type="text" class="form-control" id="name" placeholder="Name")

                        div(class="form-group")
                            label(for="email" class="sr-only") Email
                            input(type="text" class="form-control" id="email" placeholder="Email")

                        div(class="form-group")
                            label(for="subject" class="sr-only") Sbject
                            input(type="text" class="form-control" id="subject" placeholder="Subject")

                        div(class="form-group")
                            label(for="message" class="sr-only") Message
                            textarea(class="form-control" id="message" placeholder="Your Message")

                        div(class="form-group")
                            input(type="submit" class="btn btn-primary" id="submit")

    script(async=true, defer=true, src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAxGzO3WBq_C0koJVn_DGhk9P0mkVWlgrk&callback=initMap")

    script.
        function initMap() {
            var mighty = {lat: 6.6252919, lng: 3.3233692, };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 16,
                center: mighty
            })
        }
        var marker = new google.maps.Marker({
            position: mighty,
            map: map
        });